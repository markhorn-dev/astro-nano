---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { CONTACT } from "@consts";
---

<PageLayout title={CONTACT.TITLE} description={CONTACT.DESCRIPTION}>
  <Container>
    <h1 class="text-center text-3xl mb-8">Contact Me</h1>
    <form method="POST">
      <div class="flex flex-col">
        <div class="flex justify-between pb-4">
          <div class="flex flex-col w-full">
            <label class="py-2 pr-2">First Name:</label>
            <input class="border border-stone-600 rounded-lg bg-stone-700 py-1 px-2 mr-4" type="text" name="first-name-field" required />
          </div>
          <div class="flex flex-col">
            <label class="py-2">Last Name:</label>
            <input class="border border-stone-600 rounded-lg bg-stone-700 py-1 px-2" type="text" name="last-name-field" required />
          </div>
        </div>
        <label class="pb-2">Email:</label>
        <input class="border border-stone-600 rounded-lg bg-stone-700 py-1 px-2 mb-4" type="email" name="email-field" required minlength="6" />
        <label class="pb-2">Subject:</label>
        <input class="border border-stone-600 rounded-lg bg-stone-700 py-1 px-2 mb-4" type="text" name="subject-field" required />
        <label class="pb-2">Message:</label>
        <textarea class="border border-stone-600 rounded-lg bg-stone-700 py-1 px-2 mb-4" name="message-field" rows="4" cols="50" required />
      </div>
      <button id="submit-btn" class="mt-6 mr-12 relative group flex flex-nowrap py-1 px-3 rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out">Submit</button>
    </form>
  </Container>
</PageLayout>